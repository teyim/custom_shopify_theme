{%- style -%}
  .discount-image-container {
    width: 100%;
    position: relative;
    overflow: hidden;
    height: 203px; /* Smaller height for mobile */
  }

  .discount-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top  | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | round: 0 }}px;
    padding: 0 20px;
  }

  .discount-text {
    font-size: 1.8rem;
    text-align: center;
    padding: 15px 10px;
  }

  @media screen and (min-width: 750px) {
    .discount-image-container {
      height: 203px;
    }

    .section-{{ section.id }}-margin {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
      padding: 0 40px;
    }

    .discount-text {
      font-size: 2.2rem;
      padding: 20px 0;
    }
  }
{%- endstyle -%}

<section class="section-{{ section.id }}-margin">
  <div class="discount-image-container">
    {%- if section.settings.image != blank -%}
      {{
        section.settings.image
        | image_url: width: 1500
        | image_tag:
          loading: "lazy",
          class: "discount-image",
          height: section.settings.image.height,
          width: section.settings.image.width,
          alt: section.settings.image_alt
        | escape
      }}
    {%- else -%}
      {{ "lifestyle-1" | placeholder_svg_tag: "placeholder-svg" }}
    {%- endif -%}
  </div>
  <div>
    <h2><a class="full-unstyled-link" href="#join" stye>{{ section.settings.heading_text }}</a></h2>
  </div>
</section>

{% schema %}
  {
    "name": "Discount",
    "class": "discount",
    "settings": [
      {
        "type": "text",
        "id": "heading_text",
        "label": "Heading Text",
        "default": "Join â€” Get 10% off Your First purchase"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Discount Image"
      },
      {
        "type": "text",
        "id": "image_alt",
        "label": "Image alt text",
        "info": "Describe the image for accessibility"
      },
      {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Margin top",
        "default": 36
      },
      {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Margin bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "Discount",
        "category": "Custom Sections"
      }
    ]
  }
{% endschema %}
